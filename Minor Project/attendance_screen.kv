<AttendanceScreen>:
    name:"attendance"

    MDBoxLayout:
        id: attendance_layout
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)

        MDLabel:
            text: 'Attendance Records'
            halign: 'center'
            font_style: 'H5'
            size_hint_y: None
            height: dp(50)

        MDLabel:
            id: datelabel
            text:"Attendance for --/--/----"
            halign: 'center'
            theme_text_color: 'Primary'
            font_style:"H6"
            size_hint_y:None 
            height: dp(40)       


        MDRaisedButton:
            text: '"Filter Attendance'
            pos_hint:{"center_x":0.5}
            size_hint_x:0.8
            md_bg_color: (0,0.6,1,1)
            on_release: root.show_filter_dialog()

        MDRaisedButton:
            text: 'Export Attendance'
            pos_hint: {"center_x":0.5}
            size_hint_x: 0.8
            md_bg_color: (0,0.7,0.3,1)
            on_release: root.export_attendance()

        MDRaisedButton:
            text:"Manual Attendance Marking"
            pos_hint:{"center_x":0.5}
            size_hint_x: 0.8
            md_bg_color: (1,0.5,0,1)
            on_release: root.show_manual_attendance_dialog()

        MDFillRoundFlatButton:
            text:"Back"
            size_hint_x: 0.8
            pos_hint: {"center_x":0.5}
            on_release: root.switch_screen("home")             

     #   ScrollView:
     #       id:scroller
        MDBoxLayout:
            id:table_box
            orientation: 'vertical'
            size_hint_y:1
               # height:self.minimum_height
            padding: dp(45)

  